<div class="row justify-content-around m-5">
  <div class="col-md-4 border rounded bg-info bg-opacity-10">
    <h2>Login</h2>
    <form class="form login-form m-3">
      <div class="form-group m-3 ">
        <label for="email-login" class="form-label fs-5">Email:</label>
        <input class="form-input form-control" type="email" id="email-login" />
      </div>
      <div class="form-group m-3">
        <label for="password-login" class="form-label fs-5" >Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  
  <div class="col-md-4 border rounded bg-info bg-opacity-10">
    <h2>Signup</h2>
    <form class="form signup-form m-3">
      <div class="form-group m-3">
        <label for="email-signup" class="form-label fs-5">Email:</label>
        <input class="form-input form-control" type="email" id="email-signup" />
      </div>
      <div class="form-group m-3">
        <label for="password-signup" class="form-label fs-5" >Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>